<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-training-bonuses-link">
                <arguments>
                    <argument name="path" xsi:type="string">training_rendering/customer/bonuses</argument>
                    <argument name="label" xsi:type="string" translate="true">My Bonuses</argument>
                    <argument name="sortOrder" xsi:type="number">231</argument>
